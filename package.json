{
  "name": "thinkcove-lib",
  "version": "1.0.0",
  "description": "Lightweight utilities for Hapi ts",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepublishOnly": "npm run build",
    "changelog": "auto-changelog -p",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "lint:fix": "eslint --fix \"src/**/*.{js,ts}\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "release": "bash npm-publish.sh"
  },
  "files": [
    "lib",
    "README.md"
  ],
  "keywords": [
    "hapi",
    "utils",
    "typescript",
    "api",
    "request",
    "validation"
  ],
  "author": "Thinkcove Technologies",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "blipp": "^4.0.2",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "dotenv": "^17.2.0",
    "eslint": "^9.31.0",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.36.0"
  },
  "peerDependencies": {
    "@hapi/hapi": "^21.0.0",
    "@hapi/inert": "^7.1.0",
    "@hapi/vision": "^7.0.3",
    "bcrypt": "^6.0.0",
    "config": "^4.0.0",
    "google-libphonenumber": "^3.2.42",
    "hapi-auth-bearer-token": "^8.0.0",
    "hapi-swagger": "^17.3.2",
    "http-status-codes": "^2.3.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.9",
    "@types/config": "^3.3.5",
    "@types/google-libphonenumber": "^7.4.30",
    "@types/hapi-auth-bearer-token": "^6.1.8",
    "@types/jest": "^30.0.0",
    "@types/joi": "^17.2.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.13",
    "auto-changelog": "^2.5.0",
    "jest": "^30.0.4",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "auto-changelog": {
    "output": "CHANGELOG.md",
    "template": "keepachangelog",
    "unreleased": false,
    "commitLimit": false
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Thinkcove/thinkcove-lib.git"
  },
  "bugs": {
    "url": "https://github.com/Thinkcove/thinkcove-lib/issues"
  },
  "homepage": "https://github.com/Thinkcove/thinkcove-lib#readme"
}
